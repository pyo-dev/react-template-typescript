<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<style>
		span{
			background-color: red;
			color: #fff;
		}
	</style>
</head>

<body>
	<div>
		<input type="text" onkeyup="handleChange(event)">
		<div id="data"></div>
	</div>
	<script>
		let testText = '1122331122';
		const targetDiv = document.getElementById('data')

		targetDiv.innerHTML = testText;
		const handleChange = (event) => {
			const inputValue = event.target.value;

			// RegExp에서 특수문자 이스케이프 처리
			function escapeRegExp(string) {
				return string.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
			}

			let regex = new RegExp(escapeRegExp(inputValue), 'g');
			let highlightedText = testText.replace(regex, `<span>${inputValue}</span>`);
			targetDiv.innerHTML = highlightedText;
		}
	</script>
</body>

</html>
