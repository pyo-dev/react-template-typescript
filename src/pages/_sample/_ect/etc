import React, { useEffect, useRef, useState } from "react";

type DataPoint = [number, number, number, ...any[]];

interface Props {
  data: DataPoint[];
  fontColor?: string;
  fontColorSelected?: string;
  onSelectionChange?: (selected: DataPoint[]) => void;
}

export default function WaferHeatmap({
  data,
  fontColor = "#000",
  fontColorSelected = "#fff",
  onSelectionChange,
}: Props) {
  const canvasRef = useRef<HTMLCanvasElement>(null);
  const wrapperRef = useRef<HTMLDivElement>(null);

  const metaRef = useRef({ minX: 0, maxX: 0, minY: 0, maxY: 0, w: 0, h: 0 });
  const selectedCellsRef = useRef<Set<string>>(new Set());

  const dragRef = useRef<{
    dragging: boolean;
    mode: "pan" | "select" | null;
    startX: number;
    startY: number;
    endX: number;
    endY: number;
  }>({
    dragging: false,
    mode: null,
    startX: 0,
    startY: 0,
    endX: 0,
    endY: 0,
  });

  const dragHappenedRef = useRef(false);
  const panHappenedRef = useRef(false);
  const suppressClickRef = useRef(false);

  const scaleRef = useRef(1);
  const offsetRef = useRef({ x: 0, y: 0 });

  const [tooltip, setTooltip] = useState<{
    x: number;
    y: number;
    v: number;
    extra: any[];
    px: number;
    py: number;
  } | null>(null);

  /* ================= META ================= */
  useEffect(() => {
    if (!data.length) return;
    const xs = data.map(d => d[0]);
    const ys = data.map(d => d[1]);

    const minX = Math.min(...xs);
    const maxX = Math.max(...xs);
    const minY = Math.min(...ys);
    const maxY = Math.max(...ys);

    metaRef.current = {
      minX,
      maxX,
      minY,
      maxY,
      w: maxX - minX + 1,
      h: maxY - minY + 1,
    };
  }, [data]);

  /* ================= RESIZE ================= */
  useEffect(() => {
    const ro = new ResizeObserver(draw);
    wrapperRef.current && ro.observe(wrapperRef.current);
    return () => ro.disconnect();
  }, []);

  const getCellSize = () => {
    const { w, h } = metaRef.current;
    const canvas = canvasRef.current!;
    const size = Math.min(canvas.clientWidth, canvas.clientHeight);
    return Math.max(1, Math.floor(size / Math.max(w, h)));
  };

  /* ================= DRAW ================= */
  const draw = () => {
    const canvas = canvasRef.current;
    if (!canvas) return;
    const ctx = canvas.getContext("2d")!;
    const dpr = window.devicePixelRatio || 1;

    const cw = wrapperRef.current!.clientWidth;
    const ch = wrapperRef.current!.clientHeight;

    canvas.width = cw * dpr;
    canvas.height = ch * dpr;
    canvas.style.width = `${cw}px`;
    canvas.style.height = `${ch}px`;

    ctx.setTransform(dpr, 0, 0, dpr, 0, 0);
    ctx.clearRect(0, 0, cw, ch);

    ctx.save();
    ctx.translate(offsetRef.current.x, offsetRef.current.y);
    ctx.scale(scaleRef.current, scaleRef.current);

    const { minX, maxY, w, h } = metaRef.current;
    const cell = getCellSize();

    const totalW = w * cell;
    const totalH = h * cell;

    const ox = (cw / scaleRef.current - totalW) / 2;
    const oy = (ch / scaleRef.current - totalH) / 2;

    // === cells ===
    for (const [x, y, v] of data) {
      const gx = x - minX;
      const gy = maxY - y;
      const key = `${x},${y}`;

      ctx.fillStyle = selectedCellsRef.current.has(key)
        ? "rgba(255,0,0,0.7)"
        : `hsl(${240 - v * 2},80%,50%)`;

      ctx.fillRect(ox + gx * cell, oy + gy * cell, cell, cell);

      ctx.fillStyle = selectedCellsRef.current.has(key)
        ? fontColorSelected
        : fontColor;

      ctx.font = `${Math.floor(cell * 0.5)}px sans-serif`;
      ctx.textAlign = "center";
      ctx.textBaseline = "middle";
      ctx.fillText(
        String(v),
        ox + gx * cell + cell / 2,
        oy + gy * cell + cell / 2
      );
    }

    // === grid ===
    ctx.strokeStyle = "rgba(0,0,0,0.35)";
    ctx.lineWidth = 1;
    for (const [x, y] of data) {
      const gx = x - minX;
      const gy = maxY - y;
      ctx.strokeRect(
        ox + gx * cell + 0.5,
        oy + gy * cell + 0.5,
        cell,
        cell
      );
    }

    // === selection overlay ===
    if (dragRef.current.dragging && dragRef.current.mode === "select") {
      const { startX, startY, endX, endY } = dragRef.current;
      ctx.fillStyle = "rgba(0,120,255,0.25)";
      ctx.strokeStyle = "rgba(0,120,255,0.9)";
      ctx.fillRect(
        Math.min(startX, endX),
        Math.min(startY, endY),
        Math.abs(endX - startX),
        Math.abs(endY - startY)
      );
      ctx.strokeRect(
        Math.min(startX, endX),
        Math.min(startY, endY),
        Math.abs(endX - startX),
        Math.abs(endY - startY)
      );
    }

    ctx.restore();
  };

  /* ================= EVENTS ================= */
  const handleDown = (e: React.MouseEvent) => {
    const rect = canvasRef.current!.getBoundingClientRect();
    const sx = e.clientX - rect.left;
    const sy = e.clientY - rect.top;

    const wx = (sx - offsetRef.current.x) / scaleRef.current;
    const wy = (sy - offsetRef.current.y) / scaleRef.current;

    dragRef.current = {
      dragging: true,
      mode: e.shiftKey && scaleRef.current !== 1 ? "pan" : "select",
      startX: wx,
      startY: wy,
      endX: wx,
      endY: wy,
    };

    dragHappenedRef.current = false;
    panHappenedRef.current = false;
    suppressClickRef.current = false;
  };

  const handleMove = (e: React.MouseEvent) => {
    const canvas = canvasRef.current!;
    const rect = canvas.getBoundingClientRect();
    const sx = e.clientX - rect.left;
    const sy = e.clientY - rect.top;

    const wx = (sx - offsetRef.current.x) / scaleRef.current;
    const wy = (sy - offsetRef.current.y) / scaleRef.current;

    // tooltip
    const { minX, maxY } = metaRef.current;
    const cell = getCellSize();
    const gx = Math.floor((wx - (canvas.clientWidth / scaleRef.current - metaRef.current.w * cell) / 2) / cell);
    const gy = Math.floor((wy - (canvas.clientHeight / scaleRef.current - metaRef.current.h * cell) / 2) / cell);

    const dataX = minX + gx;
    const dataY = maxY - gy;
    const found = data.find(d => d[0] === dataX && d[1] === dataY);

    setTooltip(
      found
        ? { x: dataX, y: dataY, v: found[2], extra: found.slice(3), px: sx, py: sy }
        : null
    );

    if (!dragRef.current.dragging) return;

    if (dragRef.current.mode === "pan") {
      offsetRef.current.x += sx - (dragRef.current.startX * scaleRef.current + offsetRef.current.x);
      offsetRef.current.y += sy - (dragRef.current.startY * scaleRef.current + offsetRef.current.y);

      dragRef.current.startX = wx;
      dragRef.current.startY = wy;

      panHappenedRef.current = true;
      suppressClickRef.current = true;
      draw();
      return;
    }

    // === select ===
    dragHappenedRef.current = true;
    dragRef.current.endX = wx;
    dragRef.current.endY = wy;

    const x0 = Math.min(dragRef.current.startX, wx);
    const x1 = Math.max(dragRef.current.startX, wx);
    const y0 = Math.min(dragRef.current.startY, wy);
    const y1 = Math.max(dragRef.current.startY, wy);

    for (const [x, y] of data) {
      const cx = (x - minX) * cell;
      const cy = (maxY - y) * cell;
      if (cx + cell >= x0 && cx <= x1 && cy + cell >= y0 && cy <= y1) {
        selectedCellsRef.current.add(`${x},${y}`);
      }
    }

    draw();
  };

  const handleUp = () => {
    dragRef.current.dragging = false;

    if (panHappenedRef.current) {
      suppressClickRef.current = true;
      return;
    }

    if (dragHappenedRef.current) {
      suppressClickRef.current = true;
      onSelectionChange?.(
        data.filter(d => selectedCellsRef.current.has(`${d[0]},${d[1]}`))
      );
    }
  };

  const handleClick = () => {
    if (suppressClickRef.current) {
      suppressClickRef.current = false;
      return;
    }
  };

  const handleWheel = (e: React.WheelEvent) => {
    if (!e.shiftKey) return;
    e.preventDefault();

    scaleRef.current = Math.max(
      1,
      Math.min(scaleRef.current * (e.deltaY < 0 ? 1.1 : 0.9), 10)
    );
    draw();
  };

  return (
    <div
      ref={wrapperRef}
      style={{ width: "100%", height: "100%", position: "relative" }}
      onWheel={handleWheel}
    >
      <canvas
        ref={canvasRef}
        onMouseDown={handleDown}
        onMouseMove={handleMove}
        onMouseUp={handleUp}
        onClick={handleClick}
        onMouseLeave={() => {
          dragRef.current.dragging = false;
          setTooltip(null);
        }}
      />
      {tooltip && (
        <div
          style={{
            position: "absolute",
            left: tooltip.px + 10,
            top: tooltip.py + 10,
            background: "#111",
            color: "#fff",
            padding: "4px 6px",
            fontSize: 12,
            pointerEvents: "none",
            whiteSpace: "nowrap",
          }}
        >
          x:{tooltip.x} y:{tooltip.y} v:{tooltip.v}
          {tooltip.extra.map((v, i) => (
            <span key={i}> | {v}</span>
          ))}
        </div>
      )}
    </div>
  );
}
