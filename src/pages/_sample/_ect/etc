Highcharts.chart('container', {
  chart: {
    type: 'scatter',
    zoomType: 'xy', // ✅ x, y축 모두 패닝 가능
    panning: { enabled: true },
    panKey: 'shift' // Shift 누르고 드래그 → 패닝
  },
  title: { text: '스캐터 차트 패닝 예제' },
  xAxis: {
    min: 0,
    max: 10
  },
  yAxis: {
    min: 0,
    max: 10
  },
  series: [{
    name: '데이터 A',
    color: 'rgba(223, 83, 83, .5)',
    data: [
      [1, 1], [2, 3], [3, 2], [4, 5],
      [5, 3], [6, 7], [7, 4], [8, 6], [9, 8]
    ]
  }]
});
