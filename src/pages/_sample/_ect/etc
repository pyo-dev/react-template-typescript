import React, { useMemo, useRef, useState, useEffect, useCallback } from "react";
import {
  useReactTable,
  getCoreRowModel,
  getSortedRowModel,
  getFilteredRowModel,
  flexRender,
  ColumnDef,
  Row,
  SortingState,
  ColumnFiltersState,
} from "@tanstack/react-table";
import { useVirtualizer } from "@tanstack/react-virtual";
import "./VirtualizedTable.css";

const COLUMN_WIDTH = 120;
const CHECKBOX_COLUMN_WIDTH = 40;
const ROW_HEIGHT = 35;

const fixedStartCount = 1;
const fixedEndCount = 2;

export type RowData = Record<string, any>;

interface VirtualizedTableProps {
  data: RowData[];
  onSelectChange?: (selectedData: RowData[]) => void;
}

const VirtualizedTable: React.FC<VirtualizedTableProps> = ({ data: tableData, onSelectChange }) => {
  const [sorting, setSorting] = useState<SortingState>([]);
  const [columnFilters, setColumnFilters] = useState<ColumnFiltersState>([]);
  const [selectedRowIds, setSelectedRowIds] = useState<Record<string, boolean>>({});

  // âœ… ì„ íƒëœ í–‰ ë¶€ëª¨ë¡œ ì „ë‹¬
  useEffect(() => {
    if (onSelectChange) {
      const selectedData = tableData.filter((_, idx) => selectedRowIds[idx]);
      onSelectChange(selectedData);
    }
  }, [selectedRowIds, tableData, onSelectChange]);

  const table = useReactTable<RowData>({
    data: tableData,
    columns: [], // placeholder (ì•„ë˜ useMemoì—ì„œ êµì²´ë¨)
    state: { sorting, columnFilters },
    onSortingChange: setSorting,
    onColumnFiltersChange: setColumnFilters,
    getCoreRowModel: getCoreRowModel(),
    getSortedRowModel: getSortedRowModel(),
    getFilteredRowModel: getFilteredRowModel(),
  });

  // âœ… HeaderCheckboxëŠ” useCallbackìœ¼ë¡œ ê³ ì •
  const HeaderCheckbox = useCallback(() => {
    const ref = useRef<HTMLInputElement>(null);

    const allSelected =
      table.getRowModel().rows.length > 0 &&
      table.getRowModel().rows.every((row) => selectedRowIds[row.id]);
    const someSelected =
      table.getRowModel().rows.some((row) => selectedRowIds[row.id]) && !allSelected;

    useEffect(() => {
      if (ref.current) ref.current.indeterminate = someSelected;
    }, [someSelected]);

    const toggleAll = () => {
      const newSelected: Record<string, boolean> = {};
      if (!allSelected) {
        table.getRowModel().rows.forEach((row) => {
          newSelected[row.id] = true;
        });
      }
      setSelectedRowIds(newSelected);
    };

    return <input ref={ref} type="checkbox" checked={allSelected} onChange={toggleAll} />;
  }, [table, selectedRowIds]);

  // âœ… columnsëŠ” useMemoë¡œ ê³ ì •
  const columns: ColumnDef<RowData, any>[] = useMemo(() => {
    if (!tableData[0]) return [];

    const dataColumns: ColumnDef<RowData, any>[] = Object.keys(tableData[0]).map((key) => ({
      accessorKey: key,
      header: () => key,
      cell: (info) => info.getValue() as string,
      filterFn: (row, columnId, filterValue) => {
        const value = row.getValue(columnId);
        return String(value).toLowerCase().includes(String(filterValue).toLowerCase());
      },
    }));

    return [
      {
        id: "select",
        header: HeaderCheckbox,
        cell: ({ row }) => (
          <input
            type="checkbox"
            checked={!!selectedRowIds[row.id]}
            onChange={() =>
              setSelectedRowIds((prev) => ({ ...prev, [row.id]: !prev[row.id] }))
            }
          />
        ),
      },
      ...dataColumns,
    ];
  }, [tableData, selectedRowIds, HeaderCheckbox]);

  // âœ… columns ë³€ê²½ ì‹œ tableì— ì ìš©
  useEffect(() => {
    table.setOptions((prev) => ({ ...prev, columns }));
  }, [columns, table]);

  const parentRef = useRef<HTMLDivElement | null>(null);
  const rowVirtualizer = useVirtualizer({
    count: table.getRowModel().rows.length,
    getScrollElement: () => parentRef.current,
    estimateSize: () => ROW_HEIGHT,
    overscan: 40,
  });

  const getColumnWidth = (index: number) => (index === 0 ? CHECKBOX_COLUMN_WIDTH : COLUMN_WIDTH);

  const getStickyStyle = (index: number) => {
    if (index < fixedStartCount) {
      const leftOffset = Array.from({ length: index })
        .map((_, i) => getColumnWidth(i))
        .reduce((a, b) => a + b, 0);
      return { position: "sticky", left: leftOffset, zIndex: 4, background: "#f0f0f0" };
    }

    if (index >= columns.length - fixedEndCount) {
      const rightOffset = Array.from({ length: columns.length - index - 1 })
        .map((_, i) => getColumnWidth(columns.length - i - 1))
        .reduce((a, b) => a + b, 0);
      return { position: "sticky", right: rightOffset, zIndex: 4, background: "#f0f0f0" };
    }
    return {};
  };

  return (
    <div style={{ width: "100%" }}>
      <div
        ref={parentRef}
        className="table-scroll-container"
        style={{ height: "600px", width: "100%", overflow: "auto", position: "relative" }}
      >
        <div
          style={{
            width: `${columns.reduce((sum, _, i) => sum + getColumnWidth(i), 0)}px`,
          }}
        >
          {/* í—¤ë” */}
          <div
            className="table-header"
            style={{
              display: "grid",
              gridTemplateColumns: columns.map((_, i) => `${getColumnWidth(i)}px`).join(" "),
              position: "sticky",
              top: 0,
              zIndex: 3,
            }}
          >
            {table.getHeaderGroups().map((headerGroup) =>
              headerGroup.headers.map((header, colIndex) => {
                const sorted = header.column.getIsSorted();
                const columnId = header.column.id;
                const stickyStyle = getStickyStyle(colIndex);

                return (
                  <div className="header-cell" key={header.id} style={stickyStyle}>
                    <div
                      style={{ cursor: "pointer" }}
                      onClick={header.column.getToggleSortingHandler()}
                    >
                      {flexRender(header.column.columnDef.header, header.getContext())}
                      {sorted ? (sorted === "asc" ? " ğŸ”¼" : " ğŸ”½") : ""}
                    </div>
                  </div>
                );
              })
            )}
          </div>

          {/* ë³¸ë¬¸ */}
          <div style={{ height: `${rowVirtualizer.getTotalSize()}px`, position: "relative" }}>
            {rowVirtualizer.getVirtualItems().map((virtualRow) => {
              const row: Row<RowData> = table.getRowModel().rows[virtualRow.index];
              return (
                <div
                  key={row.id}
                  className="table-row"
                  style={{
                    position: "absolute",
                    top: 0,
                    left: 0,
                    transform: `translateY(${virtualRow.start}px)`,
                    display: "grid",
                    gridTemplateColumns: columns.map((_, i) => `${getColumnWidth(i)}px`).join(" "),
                  }}
                >
                  {row.getVisibleCells().map((cell, colIndex) => (
                    <div className="table-cell" key={cell.id} style={getStickyStyle(colIndex)}>
                      {flexRender(cell.column.columnDef.cell, cell.getContext())}
                    </div>
                  ))}
                </div>
              );
            })}
          </div>
        </div>
      </div>
    </div>
  );
};

export default VirtualizedTable;


import React, { useMemo, useState, useCallback } from "react";
import VirtualizedTable, { RowData } from "./VirtualizedTable";

const ROW_COUNT = 1000;
const COLUMN_COUNT = 50;

const ParentTestTable: React.FC = () => {
  const [selectedData, setSelectedData] = useState<RowData[]>([]);

  // âœ… ë”ë¯¸ ë°ì´í„° ìƒì„± (useMemoë¡œ ê³ ì •)
  const data: RowData[] = useMemo(() => {
    return Array.from({ length: ROW_COUNT }, (_, rowIndex) => {
      const row: RowData = {};
      for (let col = 0; col < COLUMN_COUNT; col++) {
        row[`col${col}`] = `R${rowIndex}-C${col}`;
      }
      return row;
    });
  }, []);

  // âœ… ì„ íƒ ë°ì´í„° ë³€ê²½ í•¸ë“¤ëŸ¬ (useCallbackìœ¼ë¡œ ë Œë”ë§ ìµœì†Œí™”)
  const handleSelectChange = useCallback((selected: RowData[]) => {
    setSelectedData(selected);
  }, []);

  // âœ… ë¶€ëª¨ ë²„íŠ¼ í´ë¦­ ì‹œ ì„ íƒ ë°ì´í„° í™•ì¸
  const handleExport = useCallback(() => {
    console.log("ì„ íƒëœ ë°ì´í„°:", selectedData);
    alert(`ì„ íƒëœ í–‰ ìˆ˜: ${selectedData.length}`);
  }, [selectedData]);

  return (
    <div style={{ padding: 16 }}>
      <h2>í…ŒìŠ¤íŠ¸ ê°€ìƒí™” í…Œì´ë¸”</h2>
      <button onClick={handleExport} style={{ marginBottom: 8, padding: "6px 12px" }}>
        ë¶€ëª¨ì—ì„œ ì„ íƒ ë°ì´í„° í™•ì¸
      </button>

      <VirtualizedTable data={data} onSelectChange={handleSelectChange} />
    </div>
  );
};

export default ParentTestTable;
