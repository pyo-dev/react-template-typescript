import React, { useEffect, useRef, useState } from "react";

type DataPoint = [number, number, number, ...any[]];

interface Props {
  data: DataPoint[];
  fontColor?: string;
  fontColorSelected?: string;
  onSelectionChange?: (selected: DataPoint[]) => void;
}

export default function WaferHeatmap({
  data,
  fontColor = "#000",
  fontColorSelected = "#fff",
  onSelectionChange,
}: Props) {
  const canvasRef = useRef<HTMLCanvasElement>(null);
  const wrapperRef = useRef<HTMLDivElement>(null);

  const metaRef = useRef({ minX: 0, maxX: 0, minY: 0, maxY: 0, w: 0, h: 0 });
  const selectedCellsRef = useRef<Set<string>>(new Set());

  const scaleRef = useRef(1);
  const offsetRef = useRef({ x: 0, y: 0 });

  const dragRef = useRef({
    dragging: false,
    mode: null as "pan" | "select" | null,
    startWX: 0,
    startWY: 0,
    currWX: 0,
    currWY: 0,
    lastSX: 0,
    lastSY: 0,
  });

  const suppressClickRef = useRef(false);

  const [tooltip, setTooltip] = useState<{
    x: number;
    y: number;
    v: number;
    extra: any[];
    px: number;
    py: number;
  } | null>(null);

  /* ================= META ================= */
  useEffect(() => {
    if (!data.length) return;
    const xs = data.map(d => d[0]);
    const ys = data.map(d => d[1]);
    metaRef.current = {
      minX: Math.min(...xs),
      maxX: Math.max(...xs),
      minY: Math.min(...ys),
      maxY: Math.max(...ys),
      w: Math.max(...xs) - Math.min(...xs) + 1,
      h: Math.max(...ys) - Math.min(...ys) + 1,
    };
  }, [data]);

  /* ================= RESIZE ================= */
  useEffect(() => {
    const ro = new ResizeObserver(draw);
    wrapperRef.current && ro.observe(wrapperRef.current);
    return () => ro.disconnect();
  }, []);

  const getCellSize = () => {
    const { w, h } = metaRef.current;
    const canvas = canvasRef.current!;
    return Math.floor(Math.min(canvas.clientWidth, canvas.clientHeight) / Math.max(w, h));
  };

  /* ================= DRAW ================= */
  const draw = () => {
    const canvas = canvasRef.current;
    if (!canvas) return;
    const ctx = canvas.getContext("2d")!;
    const dpr = window.devicePixelRatio || 1;

    const cw = wrapperRef.current!.clientWidth;
    const ch = wrapperRef.current!.clientHeight;

    canvas.width = cw * dpr;
    canvas.height = ch * dpr;
    canvas.style.width = `${cw}px`;
    canvas.style.height = `${ch}px`;

    ctx.setTransform(dpr, 0, 0, dpr, 0, 0);
    ctx.clearRect(0, 0, cw, ch);

    ctx.save();
    ctx.translate(offsetRef.current.x, offsetRef.current.y);
    ctx.scale(scaleRef.current, scaleRef.current);

    const { minX, maxY, w, h } = metaRef.current;
    const cell = getCellSize();
    const ox = (cw / scaleRef.current - w * cell) / 2;
    const oy = (ch / scaleRef.current - h * cell) / 2;

    // cells
    for (const [x, y, v] of data) {
      const gx = x - minX;
      const gy = maxY - y;
      const key = `${x},${y}`;

      ctx.fillStyle = selectedCellsRef.current.has(key)
        ? "rgba(255,0,0,0.7)"
        : `hsl(${240 - v * 2},80%,50%)`;

      ctx.fillRect(ox + gx * cell, oy + gy * cell, cell, cell);

      ctx.fillStyle = selectedCellsRef.current.has(key)
        ? fontColorSelected
        : fontColor;

      ctx.font = `${Math.floor(cell * 0.5)}px sans-serif`;
      ctx.textAlign = "center";
      ctx.textBaseline = "middle";
      ctx.fillText(
        String(v),
        ox + gx * cell + cell / 2,
        oy + gy * cell + cell / 2
      );
    }

    // grid
    ctx.strokeStyle = "rgba(0,0,0,0.35)";
    for (const [x, y] of data) {
      const gx = x - minX;
      const gy = maxY - y;
      ctx.strokeRect(
        ox + gx * cell + 0.5,
        oy + gy * cell + 0.5,
        cell,
        cell
      );
    }

    // overlay (월드 좌표 기준)
    if (dragRef.current.dragging && dragRef.current.mode === "select") {
      const { startWX, startWY, currWX, currWY } = dragRef.current;
      ctx.fillStyle = "rgba(0,120,255,0.25)";
      ctx.strokeStyle = "rgba(0,120,255,0.9)";
      ctx.fillRect(
        Math.min(startWX, currWX),
        Math.min(startWY, currWY),
        Math.abs(currWX - startWX),
        Math.abs(currWY - startWY)
      );
      ctx.strokeRect(
        Math.min(startWX, currWX),
        Math.min(startWY, currWY),
        Math.abs(currWX - startWX),
        Math.abs(currWY - startWY)
      );
    }

    ctx.restore();
  };

  /* ================= EVENTS ================= */
  const handleDown = (e: React.MouseEvent) => {
    const rect = canvasRef.current!.getBoundingClientRect();
    const sx = e.clientX - rect.left;
    const sy = e.clientY - rect.top;

    dragRef.current.dragging = true;
    dragRef.current.mode = e.shiftKey && scaleRef.current !== 1 ? "pan" : "select";
    dragRef.current.lastSX = sx;
    dragRef.current.lastSY = sy;

    dragRef.current.startWX = (sx - offsetRef.current.x) / scaleRef.current;
    dragRef.current.startWY = (sy - offsetRef.current.y) / scaleRef.current;
    dragRef.current.currWX = dragRef.current.startWX;
    dragRef.current.currWY = dragRef.current.startWY;

    suppressClickRef.current = false;
  };

  const handleMove = (e: React.MouseEvent) => {
    const rect = canvasRef.current!.getBoundingClientRect();
    const sx = e.clientX - rect.left;
    const sy = e.clientY - rect.top;

    // tooltip
    const wx = (sx - offsetRef.current.x) / scaleRef.current;
    const wy = (sy - offsetRef.current.y) / scaleRef.current;

    const { minX, maxY } = metaRef.current;
    const cell = getCellSize();
    const gx = Math.floor((wx - (wrapperRef.current!.clientWidth / scaleRef.current - metaRef.current.w * cell) / 2) / cell);
    const gy = Math.floor((wy - (wrapperRef.current!.clientHeight / scaleRef.current - metaRef.current.h * cell) / 2) / cell);

    const dataX = minX + gx;
    const dataY = maxY - gy;
    const found = data.find(d => d[0] === dataX && d[1] === dataY);
    setTooltip(found ? { x: dataX, y: dataY, v: found[2], extra: found.slice(3), px: sx, py: sy } : null);

    if (!dragRef.current.dragging) return;

    if (dragRef.current.mode === "pan") {
      offsetRef.current.x += sx - dragRef.current.lastSX;
      offsetRef.current.y += sy - dragRef.current.lastSY;
      dragRef.current.lastSX = sx;
      dragRef.current.lastSY = sy;
      suppressClickRef.current = true;
      draw();
      return;
    }

    // select
    dragRef.current.currWX = wx;
    dragRef.current.currWY = wy;

    const x0 = Math.min(dragRef.current.startWX, wx);
    const x1 = Math.max(dragRef.current.startWX, wx);
    const y0 = Math.min(dragRef.current.startWY, wy);
    const y1 = Math.max(dragRef.current.startWY, wy);

    for (const [x, y] of data) {
      const cx = (x - minX) * cell;
      const cy = (maxY - y) * cell;
      if (cx + cell >= x0 && cx <= x1 && cy + cell >= y0 && cy <= y1) {
        selectedCellsRef.current.add(`${x},${y}`);
      }
    }

    draw();
  };

  const handleUp = () => {
    if (dragRef.current.mode === "select") {
      onSelectionChange?.(
        data.filter(d => selectedCellsRef.current.has(`${d[0]},${d[1]}`))
      );
    }

    dragRef.current.dragging = false;
    dragRef.current.mode = null;
    draw();
  };

  const handleWheel = (e: React.WheelEvent) => {
    if (!e.shiftKey) return;
    e.preventDefault();
    scaleRef.current = Math.max(1, Math.min(scaleRef.current * (e.deltaY < 0 ? 1.1 : 0.9), 10));
    draw();
  };

  return (
    <div
      ref={wrapperRef}
      style={{ width: "100%", height: "100%", position: "relative" }}
      onWheel={handleWheel}
    >
      <canvas
        ref={canvasRef}
        onMouseDown={handleDown}
        onMouseMove={handleMove}
        onMouseUp={handleUp}
        onMouseLeave={() => {
          dragRef.current.dragging = false;
          dragRef.current.mode = null;
          setTooltip(null);
          draw();
        }}
      />
      {tooltip && (
        <div
          style={{
            position: "absolute",
            left: tooltip.px + 10,
            top: tooltip.py + 10,
            background: "#111",
            color: "#fff",
            padding: "4px 6px",
            fontSize: 12,
            pointerEvents: "none",
            whiteSpace: "nowrap",
          }}
        >
          x:{tooltip.x} y:{tooltip.y} v:{tooltip.v}
          {tooltip.extra.map((v, i) => (
            <span key={i}> | {v}</span>
          ))}
        </div>
      )}
    </div>
  );
}
