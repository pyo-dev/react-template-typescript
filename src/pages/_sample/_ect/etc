import React, { useMemo, useRef } from "react";
import {
  useReactTable,
  getCoreRowModel,
  flexRender,
  createColumnHelper,
  ColumnDef,
  HeaderGroup,
  Row,
} from "@tanstack/react-table";
import { useVirtualizer } from "@tanstack/react-virtual";
import "./VirtualizedTableWithHeader.css";

// ---------------------------
// ìƒìˆ˜
// ---------------------------
const ROW_COUNT = 10000;
const COLUMN_COUNT = 400;
const COLUMN_WIDTH = 120;
const ROW_HEIGHT = 35;

// ---------------------------
// íƒ€ì…
// ---------------------------
// Record<string, string>ì„ ëª…ì‹œì ìœ¼ë¡œ ì„ ì–¸
export type RowData = Record<string, string>;

// ---------------------------
// ì»´í¬ë„ŒíŠ¸
// ---------------------------
const VirtualizedTableWithHeader: React.FC = () => {
  // ë”ë¯¸ ë°ì´í„° ìƒì„±
  const data = useMemo<RowData[]>(
    () =>
      Array.from({ length: ROW_COUNT }, (_, rowIndex) => {
        const row: RowData = {};
        for (let col = 0; col < COLUMN_COUNT; col++) {
          row[`col${col}`] = `R${rowIndex}-C${col}`;
        }
        return row;
      }),
    []
  );

  // ì»¬ëŸ¼ ì •ì˜
  const columnHelper = createColumnHelper<RowData>();
  const columns = useMemo<ColumnDef<RowData, string>[]>(
    () =>
      Array.from({ length: COLUMN_COUNT }, (_, i) =>
        columnHelper.accessor(`col${i}` as keyof RowData, {
          header: () => `Col ${i}`,
          cell: (info) => info.getValue() as string,
        })
      ),
    [columnHelper]
  );

  // TanStack Table ì¸ìŠ¤í„´ìŠ¤ ìƒì„±
  const table = useReactTable<RowData>({
    data,
    columns,
    getCoreRowModel: getCoreRowModel(),
  });

  // ìŠ¤í¬ë¡¤ Ref
  const parentRef = useRef<HTMLDivElement | null>(null);

  // í–‰ ê°€ìƒí™” ì„¤ì •
  const rowVirtualizer = useVirtualizer({
    count: table.getRowModel().rows.length,
    getScrollElement: () => parentRef.current,
    estimateSize: () => ROW_HEIGHT,
    overscan: 10,
  });

  return (
    <div className="table-container">
      {/* ğŸ”¹ ê³ ì • í—¤ë” */}
      <div
        className="table-header"
        style={{
          display: "grid",
          gridTemplateColumns: `repeat(${columns.length}, ${COLUMN_WIDTH}px)`,
        }}
      >
        {table.getHeaderGroups().map((headerGroup: HeaderGroup<RowData>) => (
          <React.Fragment key={headerGroup.id}>
            {headerGroup.headers.map((header) => (
              <div className="header-cell" key={header.id}>
                {flexRender(
                  header.column.columnDef.header,
                  header.getContext()
                )}
              </div>
            ))}
          </React.Fragment>
        ))}
      </div>

      {/* ğŸ”¹ ìŠ¤í¬ë¡¤ ê°€ëŠ¥í•œ ë³¸ë¬¸ */}
      <div
        ref={parentRef}
        className="table-body"
        style={{ height: "600px", overflow: "auto", position: "relative" }}
      >
        <div
          style={{
            height: `${rowVirtualizer.getTotalSize()}px`,
            position: "relative",
          }}
        >
          {rowVirtualizer.getVirtualItems().map((virtualRow) => {
            const row: Row<RowData> =
              table.getRowModel().rows[virtualRow.index];
            return (
              <div
                key={row.id}
                className="table-row"
                style={{
                  position: "absolute",
                  top: 0,
                  left: 0,
                  transform: `translateY(${virtualRow.start}px)`,
                  display: "grid",
                  gridTemplateColumns: `repeat(${columns.length}, ${COLUMN_WIDTH}px)`,
                }}
              >
                {row.getVisibleCells().map((cell) => (
                  <div className="table-cell" key={cell.id}>
                    {flexRender(
                      cell.column.columnDef.cell,
                      cell.getContext()
                    )}
                  </div>
                ))}
              </div>
            );
          })}
        </div>
      </div>
    </div>
  );
};

export default VirtualizedTableWithHeader;
