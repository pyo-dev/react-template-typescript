import React from 'react'
import { useReactTable, getCoreRowModel, flexRender } from '@tanstack/react-table'
import { useVirtualizer } from '@tanstack/react-virtual'

interface VirtualTableProps {
  data: any[]
}

export default function VirtualTable({ data }: VirtualTableProps) {
  const parentRef = React.useRef<HTMLDivElement>(null)

  // 컬럼 순서: 첫 번째 데이터 객체의 키 순서 그대로 + 나머지 키 뒤로
  const columns = React.useMemo(() => {
    if (!data || data.length === 0) return []

    const firstKeys = Object.keys(data[0]) // 첫 번째 아이템 순서
    const allKeysSet = new Set<string>()
    data.forEach(row => Object.keys(row).forEach(k => allKeysSet.add(k)))

    // 첫 번째 객체 키 순서를 유지하고, 나머지는 뒤에 붙임
    const finalKeys = [
      ...firstKeys,
      ...Array.from(allKeysSet).filter(k => !firstKeys.includes(k)),
    ]

    return finalKeys.map(key => ({
      accessorKey: key,
      header: key,
      cell: (info: any) => info.getValue() ?? "", // 값이 없으면 빈 문자열
    }))
  }, [data])

  const table = useReactTable({
    data,
    columns,
    getCoreRowModel: getCoreRowModel(),
  })

  const rowVirtualizer = useVirtualizer({
    count: table.getRowModel().rows.length,
    getScrollElement: () => parentRef.current,
    estimateSize: () => 35,
    overscan: 10,
  })

  return (
    <div
      ref={parentRef}
      style={{
        height: '600px',
        overflow: 'auto',
        border: '1px solid #ccc',
        position: 'relative',
        fontFamily: 'sans-serif',
      }}
    >
      <div style={{ height: `${rowVirtualizer.getTotalSize()}px`, position: 'relative' }}>
        {/* 헤더 */}
        <div
          style={{
            display: 'flex',
            position: 'sticky',
            top: 0,
            background: '#f0f0f0',
            borderBottom: '1px solid #ccc',
            zIndex: 1,
          }}
        >
          {columns.map(col => (
            <div
              key={col.accessorKey}
              style={{
                flex: 1,
                padding: '8px',
                fontWeight: 'bold',
                borderRight: '1px solid #ddd',
              }}
            >
              {col.header}
            </div>
          ))}
        </div>

        {/* 데이터 행 */}
        {rowVirtualizer.getVirtualItems().map(virtualRow => {
          const row = table.getRowModel().rows[virtualRow.index]
          if (!row) return null
          return (
            <div
              key={row.id}
              style={{
                display: 'flex',
                position: 'absolute',
                top: 0,
                left: 0,
                width: '100%',
                transform: `translateY(${virtualRow.start}px)`,
                borderBottom: '1px solid #eee',
              }}
            >
              {row.getVisibleCells().map(cell => (
                <div
                  key={cell.id}
                  style={{
                    flex: 1,
                    padding: '8px',
                    borderRight: '1px solid #eee',
                  }}
                >
                  {flexRender(cell.column.columnDef.cell, cell.getContext())}
                </div>
              ))}
            </div>
          )
        })}
      </div>
    </div>
  )
}
