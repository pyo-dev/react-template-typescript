Highcharts.chart('container', {
  chart: {
    zoomType: 'xy',
    panning: { enabled: true, type: 'xy' },
    panKey: 'shift'
  },
  xAxis: {
    events: {
      afterSetExtremes: function(e) {
        console.log('X축 변경:', e.min, e.max);
      }
    }
  },
  yAxis: {
    events: {
      afterSetExtremes: function(e) {
        console.log('Y축 변경:', e.min, e.max);
      }
    }
  },
  series: [{
    data: Array.from({ length: 200 }, (_, i) => [i, Math.sin(i / 5) * 10])
  }]
});
